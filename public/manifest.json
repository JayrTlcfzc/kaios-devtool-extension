{

  "description": "KaiOS devtool for 3.0 device & simulator",
  "manifest_version": 2,
  "name": "KaiOS devtool",
  "version": "1.0",
  "icons": {
    "16": "img/icons/kaidev_16.png",
    "48": "img/icons/kaidev_48.png",
    "60": "img/icons/kaidev_60.png",
    "128": "img/icons/kaidev_128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "kaios-devtool@kaiostech.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "KaiOS DevTool",
    "default_popup": "index.html"
  },

  "permissions": ["nativeMessaging", "devtools", "alarms"]

}
