{

  "description": "KaiOS devtool for 3.0 device & simulator",
  "manifest_version": 2,
  "name": "KaiOS devtool",
  "version": "1.0",
  "icons": {
    "48": "img/icons/cropped-KaiOS-Icon-32x32.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "kaios-devtool@kaiostech.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "KaiOS DevTool"
  },

  "permissions": ["nativeMessaging", "devtools", "alarms"]

}
